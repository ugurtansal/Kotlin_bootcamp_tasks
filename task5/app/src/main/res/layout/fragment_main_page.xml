<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#575454"
    tools:context=".MainPageFragment">

    <Button
        android:id="@+id/allClearBtn"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#B71C1C"
        android:text="AC"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="@android:dimen/notification_large_icon_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/zeroBtn"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#3F4145"
        android:text="0"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="24sp"
        app:cornerRadius="@android:dimen/notification_large_icon_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/allClearBtn" />

    <Button
        android:id="@+id/equalsBtn"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#4CAF50"
        android:text="="
        android:textSize="24sp"
        app:cornerRadius="@android:dimen/notification_large_icon_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/zeroBtn" />

    <Button
        android:id="@+id/divideBtn"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#4CAF50"
        android:text="/"
        android:textSize="24sp"
        app:cornerRadius="@android:dimen/notification_large_icon_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/equalsBtn" />

    <Button
        android:id="@+id/oneBtn"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#3F4145"
        android:text="1"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/allClearBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/fourBtn"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#3F4145"
        android:text="4"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/oneBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/eightBtn"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#3F4145"
        android:text="8"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/fiveBtn"
        app:layout_constraintStart_toEndOf="@+id/sevenBtn" />

    <Button
        android:id="@+id/twoBtn"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#3F4145"
        android:text="2"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/zeroBtn"
        app:layout_constraintStart_toEndOf="@+id/oneBtn" />

    <Button
        android:id="@+id/fiveBtn"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#3F4145"
        android:text="5"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/twoBtn"
        app:layout_constraintStart_toEndOf="@+id/fourBtn" />

    <Button
        android:id="@+id/nineBtn"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#3F4145"
        android:text="9"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/sixBtn"
        app:layout_constraintStart_toEndOf="@+id/eightBtn" />

    <Button
        android:id="@+id/threeBtn"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#3F4145"
        android:text="3"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/equalsBtn"
        app:layout_constraintStart_toEndOf="@+id/twoBtn" />

    <Button
        android:id="@+id/addBtn"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#4CAF50"
        android:text="+"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/mutipleBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nineBtn" />

    <Button
        android:id="@+id/sixBtn"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#3F4145"
        android:text="6"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/threeBtn"
        app:layout_constraintStart_toEndOf="@+id/fiveBtn" />

    <Button
        android:id="@+id/mutipleBtn"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#4CAF50"
        android:text="x"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/minusBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sixBtn" />

    <Button
        android:id="@+id/minusBtn"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#4CAF50"
        android:text="-"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/divideBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/threeBtn" />

    <Button
        android:id="@+id/sevenBtn"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#3F4145"
        android:text="7"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/fourBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/resultTxt"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="35dp"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textAllCaps="false"
        android:textColor="#C5C2C2"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>